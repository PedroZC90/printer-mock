{
    "verbose": true,
    "watch": [
        "./src"
    ],
    "ext": "ts, env",
    "ignore": [
        "node_modules/**/*",
        "dist/*",
        "docs/*"
    ],
    "delay": "300",
    "env": {
        "NODE_ENV": "development",
        "PORT": 9200,
        "HOST": "127.0.0.1"
    },
    "execMap": {
        "ts": "node -r ts-node/register"
    }
}
